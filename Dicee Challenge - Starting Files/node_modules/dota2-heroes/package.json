{
  "name": "dota2-heroes",
  "version": "1.6.0",
  "description": "Get random Dota 2 hero name",
  "main": "dist/dota2-heroes.umd.js",
  "module": "src/index.js",
  "scripts": {
    "start": "npm test -- --watch",
    "test": "jest",
    "build": "webpack --mode development",
    "commit": "git-cz",
    "check-coverage": "jest --coverage",
    "report-coverage": "codecov",
    "semantic-release": "semantic-release"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Den-dp/dota2-heroes.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "random",
    "Dota2",
    "hero"
  ],
  "author": "Den-dp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Den-dp/dota2-heroes/issues"
  },
  "homepage": "https://github.com/Den-dp/dota2-heroes#readme",
  "dependencies": {
    "unique-random-array": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "chai": "^3.4.0",
    "clean-webpack-plugin": "^3.0.0",
    "codecov": "^3.6.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "ghooks": "^0.3.2",
    "jest": "^24.9.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-global-object-x": "^1.0.0",
    "semantic-release": "^15.13.29"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run check-coverage"
    }
  }
}
